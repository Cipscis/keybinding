{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"paths": {
			"@cipscis/keybinding": ["./src/keybinding.ts"],
			"./KeyBind.js": ["./KeyBind.ts"],
			"./KeyPress.js": ["./KeyPress.ts"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
